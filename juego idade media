<h3 id="resultado"></h3>

<script>
const items = document.querySelectorAll('.item');
const zones = document.querySelectorAll('.zone');
const resultado = document.getElementById('resultado');

items.forEach(item => {
  item.addEventListener('dragstart', e => item.classList.add('dragging'));
  item.addEventListener('dragend', e => item.classList.remove('dragging'));
});

zones.forEach(zone => {
  zone.addEventListener('dragover', e => e.preventDefault());
  zone.addEventListener('drop', e => {
    e.preventDefault();
    const dragging = document.querySelector('.dragging');
    if (dragging) zone.appendChild(dragging);
    checkAnswers();
  });
});

function checkAnswers() {
  let correct = 0;
  items.forEach(item => {
    const parent = item.parentElement.id;
    if (parent === item.dataset.period) correct++;
  });
  if (correct === items.length) {
    resultado.textContent = " Perfecto! Clasificaches todos correctamente!";
  } else {
    resultado.textContent = `Levas ${correct}/${items.length} correctos.`;
  }
}
</script>
